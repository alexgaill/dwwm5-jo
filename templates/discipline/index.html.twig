{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="mt-5 mb-5">Liste des discpline prévues aux JO</h1>

    {% for type, messages in app.flashes %}
        <div class="alert alert-{{type}}">
            <ul class="list-group list-group-{{type}}">
                {% for message in messages %}
                    <li class="list-group-item">{{message}}</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#Nom</th>
                <th>#Nombre de candidats</th>
                <th>#Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for obj in disciplines %}
                <tr>
                    <td>{{obj.nom}}</td>
                    <td>{{obj.nombreCandidats}}</td>
                    <td>
                        <a href="{{ path("updateDiscipline", {id: obj.id})}}"><button class="btn btn-warning">Modifier</button></a>
                        <a href="{{ path("deleteDiscipline", {id: obj.id})}}"><button class="btn btn-danger">Supprimer</button></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de discipline de prévue pour le moment</td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="3"><a href="{{ path("createDiscipline")}}"><button class="btn btn-primary">Ajouter Discipline</button></a></td>
            </tr>
        </tbody>
    </table>
{% endblock %}
