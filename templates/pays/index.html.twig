{% extends 'base.html.twig' %}

{% block title %}Hello PaysController!{% endblock %}

{% block body %}

    <h1 class="mt-5 mb-5">Liste des pays participants aux JO</h1>

    {% for type, messages in app.flashes %}
        <div class="alert alert-{{type}}">
            <ul class="list-group list-group-{{type}}">
                {% for message in messages %}
                    <li class="list-group-item">{{message}}</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#Nom</th>
                <th>#Drapeau</th>
                <th>#Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for obj in pays %}
                <tr>
                    <td>{{obj.nom}}</td>
                    <td><img src="{{ asset("/img/drapeaux/" ~ obj.drapeau)}}" alt="{{obj.nom}}"></td>
                    <td>
                        <a href="{{ path("updatePays", {id: obj.id})}}"><button class="btn btn-warning">Modifier</button></a>
                        <a href="{{ path("deletePays", {id: obj.id})}}"><button class="btn btn-danger">Supprimer</button></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas de pays inscrits pour le moment</td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="3"><a href="{{ path("createPays")}}"><button class="btn btn-primary">Ajouter Pays</button></a></td>
            </tr>
        </tbody>
    </table>
{% endblock %}
